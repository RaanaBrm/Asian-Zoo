<%- include('../partials/head', { headTitle }) %>
<%-include('../partials/header') %>

<main class="layout">
  <!-- SIDEBAR -->
  <aside class="sidebar">
    <h2>Team Members</h2>
    <ul>
      <% aboutList.forEach(person => { %>
      <li>
        <a href="/about?id=<%= person.id %>"><%= person.name %></a>
      </li>
      <% }) %>
    </ul>
  </aside>

  <!-- MAIN CONTENT -->
  <section class="main-content">
    <% if (!selectedPerson) { %>

    <h1>Welcome</h1>
    <p>Select a team member to see their details.</p>

    <% } else { %>

    <h1><%= selectedPerson.name %></h1>

    <img
      src="/images/<%= selectedPerson.image %>"
      alt="<%= selectedPerson.name %>"
      width="200"
    />

    <p><strong>Country:</strong> <%= selectedPerson.country %></p>
    <p>
      <strong>Favourite Animal:</strong> <%= selectedPerson.favouriteAnimal %>
    </p>
    <p><strong>Drink:</strong> <%= selectedPerson.drink %></p>

    <% } %>
  </section>
</main>

<%- include('../partials/footer') %>
